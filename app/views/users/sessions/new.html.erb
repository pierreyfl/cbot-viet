<style>
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #eee;
  }

  .new_user {
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
  }
  .new_user .form-signin-heading,
  .new_user .checkbox {
    margin-bottom: 10px;
  }
  .new_user .checkbox {
    font-weight: normal;
  }
  .new_user .form-control {
    position: relative;
    height: auto;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    padding: 10px;
    font-size: 16px;
  }
  .new_user .form-control:focus {
    z-index: 2;
  }
  .new_user input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .new_user input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
  </style>
<div class="container">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
        <label for="inputPassword" class="sr-only">Password</label>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> Remember Me
            </label>
            
          </div>
        <% end -%>
        <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>

    </div>
